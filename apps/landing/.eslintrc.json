{
  "extends": ["../../.eslintrc.json", "next", "next/core-web-vitals"],
  "ignorePatterns": [
    "!**/*",
    ".next/**/*",
    "out/**/*",
    "build/**/*",
    "dist/**/*",
    "*.config.js",
    "*.config.ts",
    "next-env.d.ts",
    "specs/**/*"
  ],
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    // Allow console.log in development for debugging
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
    // React is auto-imported in Next.js 13+ App Router
    "no-undef": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
