{
  "compilerOptions": {
    "outDir": "out-tsc/cypress",
    "allowJs": true,
    "types": ["cypress", "node"],
    "sourceMap": false,
    "composite": false,
    "emitDeclarationOnly": false,
    "declarationMap": false,
    "noEmit": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "lib": ["es2022"],
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hanapp-ph/commons": ["../../libs/commons/src/index.ts"],
      "@hanapp-ph/commons/*": ["../../libs/commons/src/*"],
      "@hanapp-ph/components/*": ["../../libs/commons/src/components/*"],
      "@hanapp-ph/utils": ["../../libs/commons/src/libs/utils.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.js",
    "cypress.config.ts",
    "**/*.cy.ts",
    "**/*.cy.tsx",
    "**/*.cy.js",
    "**/*.cy.jsx",
    "**/*.d.ts"
  ],
  "exclude": [
    "out-tsc",
    "test-output",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ]
}
