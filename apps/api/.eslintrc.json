{
  "extends": ["eslint:recommended"],
  "ignorePatterns": [
    "!**/*",
    "dist/**/*",
    "build/**/*",
    "coverage/**/*",
    "*.config.js",
    "*.config.ts",
    "src/**/*.spec.ts"
  ],
  "overrides": [
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "rules": {
        "no-unused-vars": "off",
        "no-undef": "off"
      }
    }
  ],
  "rules": {}
}
