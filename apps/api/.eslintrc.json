{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": [
    "!**/*",
    "dist/**/*",
    "build/**/*",
    "coverage/**/*",
    "*.config.js",
    "*.config.ts",
    "src/**/*.spec.ts"
  ],
  "rules": {
    // Allow unused parameters in NestJS dependency injection
    "unused-imports/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_|^(req|res|next)$"
      }
    ],
    // Allow console.log for server logging
    "no-console": "off"
  }
}
