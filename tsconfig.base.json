{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@hanapp-ph/source"],
    "baseUrl": ".",
    "paths": {
      "@hanapp-ph/commons": ["libs/commons/src/index.ts"],
      "@hanapp-ph/commons/*": ["libs/commons/src/*"],
      "@hanapp-ph/components/*": ["libs/commons/src/components/*"],
      "@hanapp-ph/utils": ["libs/commons/src/libs/utils.ts"]
    }
  }
}
