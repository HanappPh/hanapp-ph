{
  "name": "@hanapp-ph/ui",
  "version": "0.0.1",
  "type": "commonjs",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./components/*": {
      "import": "./src/components/*.tsx",
      "require": "./src/components/*.tsx",
      "types": "./src/components/*.tsx"
    },
    "./lib/*": {
      "import": "./src/lib/*.ts",
      "require": "./src/lib/*.ts",
      "types": "./src/lib/*.ts"
    }
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.543.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0"
  }
}
